<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin ="40dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="날짜 : "
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="50px"/>
        <Spinner
            android:id="@+id/insertion_year"
            android:layout_width="110dp"
            android:layout_height="match_parent"></Spinner>
        <Spinner
            android:id="@+id/insertion_month"
            android:layout_width="90dp"
            android:layout_height="match_parent"></Spinner>

        <Spinner
            android:id="@+id/insertion_day"
            android:layout_width="90dp"
            android:layout_height="match_parent"></Spinner>
        <!-- https://bottlecok.tistory.com/63 -->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="50px"/>
        <EditText
            android:id="@+id/insertion_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/border_dark_purple"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/insertion_contents"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/border_mint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="태그"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/insertion_tag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_mint"/>
    </LinearLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/InsertButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@drawable/submit" />
</LinearLayout>
