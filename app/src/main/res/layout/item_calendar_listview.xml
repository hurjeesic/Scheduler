<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!-- List Item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"> <!-- text = ""에 잇는 글자는 싹 지우고 데이터 집어 넣을것 -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_mint"
            android:padding="7dp">
            <TextView
                android:id="@+id/search_list_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년도"
                android:textSize="15dp"
                />
            <!-- 년도 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <TextView
                android:id="@+id/search_list_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="달"
                android:textSize="25dp"
                />
                <TextView
                    android:id="@+id/search_list_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/search_list_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인덱스"
                    android:textSize="0dp"/>
            </LinearLayout>

            <!-- 월과 일이 들어감 -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_light_purple"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/search_list_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="제목"/>
                <Button
                    android:id="@+id/scheduleDeleteButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/des"
                    android:layout_gravity="right"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/search_list_tags"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:text="#태그"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
