<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">/리스트 아이템
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">/text = ""에 잇는 글자는 싹 지우고 데이터 집어 넣을것
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_mint">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_year"
                android:text="년도"
                android:textSize="25dp"
                />/년도
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_date"
                android:text="달일"
                android:textSize="40dp"
                />/월과 일이 들어감
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_light_purple"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/list_title"
                    android:textSize="30dp"
                    android:text="제목"/>
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/des"
                    android:layout_gravity="right"
                    />
            </LinearLayout>
            <TextView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:text="#태그"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
